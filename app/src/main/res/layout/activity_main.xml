<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E9E8"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:padding="20dp"
        android:elevation="22dp"
        android:background="@drawable/sp_ractangle_root">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:id="@+id/loginTxt"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:hint="Username"
            android:minHeight="48dp"
            android:drawableLeft="@drawable/baseline_person_24"
            android:drawablePadding="10dp"
            android:backgroundTint="#FFF"
            android:layout_below="@+id/loginTxt"
            android:id="@+id/Usn"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#E8E9E8"
            android:id="@+id/separator"
            android:layout_below="@+id/Usn"/>
        <EditText
            android:layout_below="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:backgroundTint="#FFF"
            android:hint="Password"
            android:drawableLeft="@drawable/baseline_lock_24"
            android:drawablePadding="8dp"
            android:id="@+id/Pw"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/loginBtn"
            android:textSize="18sp"
            android:layout_below="@+id/Pw"
            android:layout_marginTop="25dp"
            android:background="@drawable/btn_ractangle_root"
            android:backgroundTint="@color/black"
            android:text="Login"/>
    </RelativeLayout>

</RelativeLayout>